{
  "name": "integration-tests",
  "version": "1.0.0",
  "description": "LEARN Portal Integration Tests",
  "main": "index.js",
  "scripts": {
    "clean:reports":"rm -rf cypress\/reports\/ && rm -rf cypress\/results\/ && rm -rf cypress\/results\/json\/ ",
    "pretest:run":"npm run clean:reports",
    "pretest:open":"npm run clean:reports",
    "test:run":"cypress run --spec cypress/integration/**/*",
    "test:open":"cypress open",
    "merge-report":"mochawesome-merge cypress/results/json/*.json > cypress/results/mochawesome-bundle.json",
    "generate-report":"marge cypress/results/mochawesome-bundle.json -o cypress/reports/html",
    "posttest:run":"npm run merge-report && npm run generate-report",
    "posttest:open":"npm run merge-report && npm run generate-report"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/concord-consortium/integration-tests.git"
  },
  "author": "Tejal Shah",
  "license": "ISC",
  "devDependencies": {
    "cypress": "^7.2.0",
    "cypress-multi-reporters": "^1.5.0",
    "eslint": "^7.26.0",
    "eslint-plugin-cypress": "^2.11.3",
    "junit-report-merger": "^2.2.2",
    "mocha": "^8.3.2",
    "mocha-junit-reporter": "^2.0.0",
    "mochawesome": "^6.2.2",
    "mochawesome-merge": "^4.2.0",
    "mochawesome-report-generator": "^5.2.0",
    "uid": "^2.0.0",
    "uuid": "^8.3.2"
  }
}
